            "port": 9222,
            "webRoot": "${workspaceFolder}",
            // optional: only attach when the URL matches, e.g. your dev server
            "urlFilter": "http://localhost:3000/*",
            // optional: map out-of-src files (if youâ€™re using a monorepo, etc.)
            "pathMapping": {
                "/": "${workspaceFolder}"
            }
        }
    ]
}